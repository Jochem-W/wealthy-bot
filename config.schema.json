{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Config",
  "type": "object",
  "properties": {
    "applicationId": {
      "description": "The Discord application ID",
      "type": "string",
      "pattern": "^\\d+$"
    },
    "guildId": {
      "description": "The guild ID",
      "type": "string",
      "pattern": "^\\d+$"
    },
    "repository": {
      "description": "GitHub repository configuration",
      "type": "object",
      "properties": {
        "owner": {
          "description": "The owner of the repository",
          "type": "string",
          "pattern": "^[A-z0-9-]+$"
        },
        "name": {
          "description": "The name of the repository",
          "type": "string",
          "pattern": "^[A-z0-9_.-]+$"
        }
      },
      "required": [
        "owner",
        "name"
      ]
    }
  },
  "required": [
    "applicationId",
    "guildId",
    "repository"
  ]
}